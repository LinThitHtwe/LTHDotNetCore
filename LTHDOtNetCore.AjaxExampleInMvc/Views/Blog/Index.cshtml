@model List<BlogModel>
@{
    ViewData["Title"] = "Blog";
    int count = 0;
}
<h2>Blog List</h2>

<a href="/Blog/Create" class="btn btn-primary">Create</a>

<table class="table table-responsive">
    <thead>
        <tr>
            <td>No.</td>
            <td>Title</td>
            <td>Author</td>
            <td>Content</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@blog.Title</td>
                <td>@blog.Author</td>
                <td>@blog.Content</td>
                <td>
                    <a class="btn btn-warning" href="/Blog/Edit/@blog.Id">
                        Edit
                    </a>
                    <button class="btn btn-danger btn-delete" data-blog-id="@blog.Id">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script>
        $('.btn-delete').click(function () {

            const isConfirm = confirm("Do you want to Delete this?");
            if (!isConfirm) return;

            const id = $(this).data('blog-id');

            $.ajax({
                type: 'POST',
                url: `/Blog/Delete/${id}`,
                data: { },
                dataType: "JSON",
                success: function (result) {
                    if (!result.isSuccess) {
                        alert(result.message);
                        return;
                    }
                    alert(result.message);
                    location.href = "/Blog/Index";
                },
                error: function (xhr, status, error) {
                    console.log({ xhr, status, error })
                }
            });
        })
    </script>
}