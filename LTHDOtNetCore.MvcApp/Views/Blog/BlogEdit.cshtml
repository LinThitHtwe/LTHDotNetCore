@model BlogModel
<h2>Edit Blog</h2>

<form action="/Blog/Update/@Model.Id" method="post">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Title">
    </div>

    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" name="Author" value="@Model.Author">
    </div>

    <div class="mb-3">
        <label class="form-label">Content</label>
        <input type="text" class="form-control" name="Content" value="@Model.Content">
    </div>


    <a href="/Blog" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-success">Update</button>
</form>